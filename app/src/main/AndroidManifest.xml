<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CuriosityApp">
        <activity
            android:name=".ForgotPswActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <receiver
            android:name=".PostNotificationReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="NOTI_SENT" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".PositiveAnswerReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="NOTI_KNEW" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".NegativeAnswerReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="NOTI_KNEW" />
            </intent-filter>
        </receiver>
    </application>

</manifest>